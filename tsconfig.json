{
  "compilerOptions": {
    "target": "ES6",
    "moduleResolution": "node",
    "module": "CommonJS",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": ".",
    "outDir": "dist",
    "strict": true,
    "incremental": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "inlineSourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmitOnError": true,
  },
  "paths": {
    "@node_modules/*": ["./node_modules/"],
  },
  "include": [
    "./src",
    "./index.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}

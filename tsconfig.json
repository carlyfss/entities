{
  "compilerOptions": {
    "target": "ES6",
    "moduleResolution": "node",
    "module": "es6",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": ".",
    "sourceMap": true,
    "outDir": "dist",
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
  },
  "include": [
    "./entities",
    "index.ts"
  ],
  "exclude": [
    "dist"
  ]
}

{
  "compilerOptions": {
    "target": "ES6",
    "moduleResolution": "node",
    "module": "es2015",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": ".",
    "outDir": "dist",
    "incremental": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "inlineSourceMap": true,
  },
  "include": [
    "./entities",
    "index.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}

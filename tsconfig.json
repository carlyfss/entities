{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "rootDir": ".",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./typeorm",
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
  },
  "include": [
    "typeorm" 
  ]
}
